<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EKO.PingPing.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EKO.PingPing.Mobile.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="{DynamicResource Surface2}"
    Shell.ForegroundColor="{DynamicResource Primary}"
    Shell.BackgroundColor="{DynamicResource Surface3}">

    <ShellContent
                ContentTemplate="{DataTemplate local:LoginPage}"
                Route="LoginPage" />

    <TabBar>
        <Tab Title="Purse"
             Icon="wallet.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:PursePage}"
                Route="PursePage" />
        </Tab>
        <Tab Title="History"
             Icon="history.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:TransactionHistoryPage}"
                Route="TransactionHistoryPage" />
        </Tab>
        <Tab Title="Profile"
             Icon="profile.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:ProfilePage}"
                Route="ProfilePage" />
        </Tab>
    </TabBar>
</Shell>
